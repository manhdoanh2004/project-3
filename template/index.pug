                            div(class="font-[400] xl:text-[16px] text-[12px] text-[#00000099]") Thương Hiệu
                        div(class="sm:pr-[32px] sm:border-r border-[#0000001A] sm:mr-[32px]")
                            div(class="font-[700] xl:text-[40px] text-[24px] text-textdark") 2,000++
                            div(class="font-[400] xl:text-[16px] text-[12px] text-[#00000099]") Sản Phẩm Chất Lượng
                        div(class="")
                            div(class="font-[700] xl:text-[40px] text-[24px] text-textdark") 30,000+
                            div(class="font-[400] xl:text-[16px] text-[12px] text-[#00000099]") Khách Hàng
                div(class="lg:ml-[60px] lg:flex-1 flex-none w-[100%] relative")
                    img(src="assets/Img/section-1_main.jpg", class="w-[100%] block   mt-[60px] " alt="")
                    img(src="assets/Img/section-1_bg-1.svg", class="w-[56px] absolute left-[0] top-[40%] sm:block hidden" alt="")
                    img(src="assets/Img/section-1_bg-2.svg" class="w-[104px] absolute right-[0] top-[15%] sm:block hidden")

    
    //-ADS
    div(class="py-[44px] bg-textdark mt-[-1px] relative")
        div(class="container mx-auto px-[16px]")
            div(class="flex flex-wrap justify-center md:gap-x-[60px] gap-x-[34px]  gap-y-[30px] ")
                img(src="assets/Img/ADS-bg-1.svg", class="sm:h-[33px] h-[23px]" alt="")
                img(src="assets/Img/ADS-bg-2.svg", class="sm:h-[33px] h-[23px]" alt="")
